<Application
    x:Class="WPFBiblioteca.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFBiblioteca"
    Startup="ApplicationStart">
    <Application.Resources>
        <FontFamily x:Key="SFCompactDisplay">pack://application:,,,/Fonts/#SFCompactDisplay</FontFamily>
        <FontFamily x:Key="SFUIDisplay">pack://application:,,,/Fonts/#SFUIDisplay</FontFamily>
        <FontFamily x:Key="SFUIText">pack://application:,,,/Fonts/#SFUIText</FontFamily>

        <Style TargetType="{x:Type ComboBox}">
            <Style.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Foreground" Value="Black" />
                </Style>
            </Style.Resources>
            <Setter Property="Foreground" Value="Black" />
        </Style>

        
    </Application.Resources>

</Application>

