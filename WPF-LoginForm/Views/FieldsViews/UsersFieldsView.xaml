<UserControl
    x:Class="WPFBiblioteca.Views.FieldsViews.UsersFieldsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:WPFBiblioteca.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fields="clr-namespace:WPFBiblioteca.ViewModels.Fields"
    xmlns:local="clr-namespace:WPFBiblioteca.Views.FieldsViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    d:DesignHeight="845"
    d:DesignWidth="1596"
    mc:Ignorable="d">
    <Border Background="white" CornerRadius="1">
        <Grid>
            <Grid.RowDefinitions>
                <!--  Control Bar  -->
                <RowDefinition Height="35" />
                <!--  Content section / Child views  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Caption  -->
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <fa:IconImage
                        Height="30"
                        Margin="15,0,10,0"
                        Foreground="{StaticResource FieldsHeadersColor}"
                        Icon="Portrait" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SFUIDisplay}"
                        FontSize="20"
                        FontWeight="Medium"
                        Foreground="{StaticResource FieldsHeadersColor}"
                        Text="Usuarios" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock
                        Padding="20,60,0,0"
                        Style="{StaticResource FieldsHeaders}"
                        Text="Nombre" />
                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        PreviewTextInput="TextStringOnPreviewTextInput"
                        Style="{StaticResource CustomCardTextBox}"
                        Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Padding="20,40,0,0"
                        Style="{StaticResource FieldsHeaders}"
                        Text="Nombre de usuario" />
                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        Style="{StaticResource CustomCardTextBox}"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Padding="20,40,0,0"
                        Style="{StaticResource FieldsHeaders}"
                        Text="Numero de empleado" />
                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        PreviewTextInput="TxtId_OnPreviewTextInput"
                        Style="{StaticResource CustomCardTextBox}"
                        Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1">
                    <TextBlock
                        Padding="20,60,0,0"
                        Style="{StaticResource FieldsHeaders}"
                        Text="Apellido" />
                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        PreviewTextInput="TextStringOnPreviewTextInput"
                        Style="{StaticResource CustomCardTextBox}"
                        Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Padding="20,40,0,0"
                        Style="{StaticResource FieldsHeaders}"
                        Text="Contraseña" />
                    <customControls:BindablePasswordBox HorizontalAlignment="Left" Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Padding="20,40,0,0"
                        Style="{StaticResource FieldsHeaders}"
                        Text="Tipo de usuario" />
                    <TextBox
                        Width="200"
                        HorizontalAlignment="Left"
                        PreviewTextInput="TextStringOnPreviewTextInput"
                        Style="{StaticResource CustomCardTextBox}"
                        Text="{Binding UserType, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Button Margin="20" Style="{StaticResource CardButton}" Command="{Binding GoBackCommand}"> 
                        <TextBlock
                            Margin="20,6,20,6"
                            FontSize="20"
                            Text="Cancelar"
                            Name="BtnCancelar"/>
                    </Button>
                    <Button
                        Margin="20"
                        Command="{Binding AddCommand}"
                        Style="{StaticResource CardButton}">
                        <TextBlock
                            Margin="20,6,20,6"
                            FontSize="20"
                            Text="Aceptar" 
                            Name="BtnAceptar"/>
                    </Button>
                </DockPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
