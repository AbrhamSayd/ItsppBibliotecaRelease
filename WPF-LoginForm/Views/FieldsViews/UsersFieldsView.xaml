<UserControl x:Class="WPFBiblioteca.Views.FieldsViews.UsersFieldsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFBiblioteca.Views.FieldsViews"
             mc:Ignorable="d"
             d:DesignWidth="1596"
             d:DesignHeight="845">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock
                Margin="20"
                FontFamily="{StaticResource SFUIDisplay}"
                FontSize="48"
                Text="Usuarios"
                FontWeight="SemiBold"
                Foreground="{StaticResource ChildTitleColor}"
                TextAlignment="Left"
                TextWrapping="Wrap">
                <Run Language="es-mx"/>
            </TextBlock>
        </StackPanel>

        <DockPanel DockPanel.Dock="Bottom">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <StackPanel Orientation="Vertical" Height="500">
                        <StackPanel Margin="20,50,0,20">
                            <TextBlock
                                Padding="20,0,0,0"
                                Text="ID"
                                Style="{StaticResource FieldsHeaders}" />
                            <TextBox
                                Margin="0,5,0,5"
                                x:Name="TxtId"
                                Width="300"
                                Style="{StaticResource CustomCardTextBox}" />
                        </StackPanel>
                        <StackPanel Margin="20,150,0,20">
                            <TextBlock
                                Padding="20,0,0,0"
                                Text="Carrera/Academia"
                                Style="{StaticResource FieldsHeaders}" />
                            <TextBox
                                x:Name="TxtCarrera"
                                Width="300"
                                Style="{StaticResource CustomCardTextBox}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <StackPanel Margin="50,50,0,20">
                            <TextBlock
                                Padding="20,0,0,0"
                                Text="Nombre"
                                Style="{StaticResource FieldsHeaders}" />
                            <TextBox
                                Margin="0,5,0,5"
                                x:Name="TxtName"
                                Width="300"
                                Style="{StaticResource CustomCardTextBox}" />
                        </StackPanel>
                        <StackPanel Margin="50,150,0,20">
                            <TextBlock
                                Padding="20,0,0,0"
                                Text="Tipo de usuario"
                                Style="{StaticResource FieldsHeaders}" />
                            <TextBox
                                Margin="0,5,0,5"
                                x:Name="TxtTipo"
                                Width="300"
                                Style="{StaticResource CustomCardTextBox}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <StackPanel Margin="50,50,0,20">
                            <TextBlock
                                Padding="20,0,0,0"
                                Text="Apellido"
                                Style="{StaticResource FieldsHeaders}" />
                            <TextBox
                                Margin="0,5,0,5"
                                x:Name="TxtAp"
                                Width="200"
                                HorizontalAlignment="Left"
                                Style="{StaticResource CustomCardTextBox}" />
                        </StackPanel>
                        <StackPanel Margin="50,150,0,20">
                            <TextBlock
                                Padding="20,0,0,0"
                                Text="No. control/empleado"
                                Style="{StaticResource FieldsHeaders}" />
                            <TextBox
                                Margin="0,5,0,5"
                                x:Name="TxtNoControl"
                                Width="200"
                                HorizontalAlignment="Left"
                                Style="{StaticResource CustomCardTextBox}" />
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
                <DockPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Button Margin="20" Style="{StaticResource CardButton}">
                        <TextBlock
                            Margin="20,6,20,6"
                            FontSize="20"
                            Text="Cancelar" />
                    </Button>
                    <Button
                        Style="{StaticResource CardButton}"
                        Margin="20"
                        Command="{Binding AddCommand}">
                        <TextBlock
                            Margin="20,6,20,6"
                            FontSize="20"
                            Text="Aceptar" />
                    </Button>
                </DockPanel>
            </DockPanel>
        </DockPanel>
    </DockPanel>
</UserControl>
