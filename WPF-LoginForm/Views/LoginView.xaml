                    Margin="282,0,-150,65"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="btnThreeDotsMinimize_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12" />
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkGoldenrod" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="/Images/img_Three_Dots-removebg-preview.png" />
                </Button>
            </Border>
            <TextBlock
                Margin="1094,16,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="{DynamicResource SFUIUltraLight}"
                FontSize="20"
                FontWeight="UltraLight"
                Foreground="{StaticResource titleColor2}"
                TextWrapping="Wrap"><Run Text="Puerto Peñasco" /><Run Language="es-mx" Text=", Sonora." /></TextBlock>
            <TextBlock
                Margin="0,21,275,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontFamily="{DynamicResource SFUILight}"
                FontSize="22"
                FontWeight="Light"
                Foreground="{StaticResource titleColor2}"
                TextWrapping="Wrap"><Run Language="es-mx" Text="10:40 PM" /></TextBlock>
            <TextBlock
                Margin="0,21,134,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontFamily="{DynamicResource SFUIDisplay}"
                FontSize="22"
                FontWeight="Bold"
                Foreground="{StaticResource titleColor2}"
                TextWrapping="Wrap"><Run Language="es-mx" Text="10/22/2022" /></TextBlock>

            <!--  Border de hasta la izquierda  -->
            <Border
                Width="452"
                HorizontalAlignment="Left"
                CornerRadius="50,0,0,50">
                <Border.Background>
