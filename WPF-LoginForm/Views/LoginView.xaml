<Window
    x:Class="WPFBiblioteca.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customcontrols="clr-namespace:WPFBiblioteca.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFBiblioteca.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:WPFBiblioteca.ViewModels"
    Title="LoginView"
    Width="1372"
    Height="772"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:LoginViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />

    </Window.Resources>

    <Window.Visibility>
        <Binding
            Converter="{StaticResource BooleanToVisibility}"
            Mode="TwoWay"
            Path="IsViewVisible" />
    </Window.Visibility>

    <Border CornerRadius="12">
        <Border
            BorderThickness="2"
            CornerRadius="10"
            Opacity="0.95">


            <Border.Background>
                <SolidColorBrush Color="#FFFF" />
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border />


                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Margin="0,1,740,-739"
                        Source="/Images/ElipseLeftLogin.png"
                        Stretch="Fill" />

                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="10"
                        Foreground="DarkGray"
                        Text="LOG IN" />

                    <Button
                        x:Name="btnMinimize"
                        Grid.Column="1"
                        BorderThickness="0"
                        Click="btnMinimize_Click"
                        Content="-"
                        Cursor="Hand"
                        FontFamily="Montserrat"
                        FontSize="16"
                        Foreground="White">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#28AEED" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Width="18"
                                    Height="18"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="9">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="2"
                        BorderThickness="0"
                        Click="btnClose_Click"
                        Content="X"
                        Cursor="Hand"
                        FontFamily="Montserrat"
                        FontSize="12"
                        Foreground="White">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#DA34AE" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Width="18"
                                    Height="18"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="9">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel
                        Width="417"
                        Margin="30,33,0,-739"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">

                        <Image
                            Width="226"
                            Height="255"
                            Source="/Images/userLogo.png"
                            Stretch="Fill" />

                        <TextBlock
                            Width="225"
                            Height="36"
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource SFUIDisplay}"
                            FontSize="30"
                            FontStyle="Normal"
                            Foreground="White"
                            Text="Iniciar Sesión"
                            TextAlignment="Center" />


                        <TextBlock
                            Margin="0,35,0,0"
                            FontFamily="{StaticResource SFUIText}"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="Username" />

                        <TextBox
                            x:Name="txtUser"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Margin="0,15,0,0"
                            FontFamily="{StaticResource SFUIText}"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="Password" />

                        <customcontrols:BindablePasswordBox
                            Height="28"
                            Margin="0,5,0,0"
                            Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Margin="0,10,0,0"
                            FontFamily="Montserrat"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="#D7596D"
                            Text="{Binding ErrorMessage}"
                            TextWrapping="Wrap" />

                        <Button
                            x:Name="btnLogin1"
                            Margin="0,30,0,0"
                            BorderThickness="0"
                            Command="{Binding LoginCommand}"
                            Content="LOG IN"
                            Cursor="Hand"
                            FontFamily="{StaticResource SFUIDisplay}"
                            FontSize="12"
                            Foreground="White">

                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#462AD8" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#28AEED" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border
                                        Width="150"
                                        Height="40"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <StackPanel
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                            <TextBlock
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                Foreground="DarkGray"
                                Text="Forgot Password?" />

                            <TextBlock
                                Margin="8,0,0,0"
                                Cursor="Hand"
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="Reset" />

                        </StackPanel>

                    </StackPanel>


                    <Image
                        Margin="690,62,63,-288"
                        Source="/Images/Logo Group.png"
                        Stretch="Fill" />
                    <Image
                        Grid.ColumnSpan="4"
                        Height="380"
                        Margin="810,389,2,-739"
                        OpacityMask="White"
                        Source="/Images/ElipseRightLogin.png"
                        Stretch="Fill" />
                </Grid>

            </Grid>

        </Border>

    </Border>

</Window>
