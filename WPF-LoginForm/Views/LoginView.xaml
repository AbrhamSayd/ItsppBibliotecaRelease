            <!--  Boton cerrar  -->

            <Button
                x:Name="btnClose"
                Margin="50,783,1474,50"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="btnClose_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <StackPanel
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    Orientation="Horizontal">
                    <Image
                        Width="40"
                        Height="45"
                        HorizontalAlignment="Left"
                        Source="/Images/img_btnCerrar.png" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        FontFamily="SF Display"
                        FontSize="30"
                        Foreground="White"
                        Text="Cerrar" />
                </StackPanel>
            </Button>

            <!--  Logo TECNM  -->
            <Image Margin="0,0,1050,0" Source="/Images/img_Tecnm_Logo GIANT.png" />

            <!--  Stack Panel User Interactions Controls  -->
            <StackPanel
                Width="767"
                HorizontalAlignment="Left"
                Orientation="Vertical">

                <Image
                    Width="450"
                    Margin="0,110,0,0"
                    Source="/Images/Img_LogoApp.png"
                    Stretch="Fill">
                    <Image.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Direction="255"
                            ShadowDepth="3"
                            Color="#FFB6C2CB" />
                    </Image.Effect>
                </Image>

                <TextBlock
                    Width="225"
                    Height="36"
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center"
                    FontFamily="{StaticResource SFUIDisplay}"
                    FontSize="30"
                    FontStyle="Normal"
                    Foreground="White"
                    Text="Iniciar Sesión"
                    TextAlignment="Center" />

                <!--  TEXTBOX and CARD for User  -->
                <Grid Margin="0,0,0,20">
                    <customcontrols:cdvEnterUser />

                </Grid>

                <!--  TEXTBOX and CARD for Password  -->
                <Grid>
                    <customcontrols:BindablePasswordBox Loaded="BindablePasswordBox_Loaded" Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <TextBlock
                    Width="310"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="SF UI Text"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="{Binding ErrorMessage}" />

                <!--  Button -Siguiente- for Login  -->
                <Border Margin="0,0,0,5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Direction="255"
                            ShadowDepth="1"
                            Color="#FFB6C2CB" />
                    </Border.Effect>
                    <Button
                        x:Name="btnLogin1"
                        Width="156"
                        BorderThickness="0"
                        Command="{Binding LoginCommand}"
                        Content="Siguiente"
                        Cursor="Hand"
                        FontFamily="{StaticResource SFUIDisplay}"
                        FontSize="24"
                        Foreground="Gray">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="White" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF9EA79F" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Width="150"
                                    Height="40"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
                <StackPanel
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

                    <TextBlock
                        FontFamily="Montserrat"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="Forgot Password?" />

                    <TextBlock
                        Margin="8,0,0,0"
                        Cursor="Hand"
                        FontFamily="Montserrat"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="Reset" />

                </StackPanel>

