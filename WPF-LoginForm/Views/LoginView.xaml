            <!--Boton cerrar-->

            <Button
                x:Name="btnClose"
                Background="Transparent"                
                BorderBrush="Transparent" 
                Click="btnClose_Click"
                Margin="50,783,1474,50" 
                >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <StackPanel
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal"
                    Background="Transparent">
                    <Image
                    HorizontalAlignment="Left"
                    Source="/Images/img_btnCerrar.png" 
                    Height="45" Width="40">
                    </Image>
                    <TextBlock 
                    Text="Cerrar"
                    Background="Transparent"
                    VerticalAlignment="Center"
                    Margin="5,0,0,0" FontFamily="SF Display" FontSize="30" Foreground="White"
                        />
                </StackPanel>
            </Button>

            <!--Logo TECNM-->
            <Image
                    Source="/Images/img_Tecnm_Logo GIANT.png" Margin="0,0,1050,0">

            </Image>

            <!--Stack Panel User Interactions Controls-->
            <StackPanel
                        Width="767"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">

                    <Image
                Width="450"
                Margin="0,110,0,0"
                Source="/Images/Img_LogoApp.png"
                Stretch="Fill">
                    <Image.Effect>
                        <DropShadowEffect Direction="255" Color="#FFB6C2CB" ShadowDepth="3" BlurRadius="15" />
                    </Image.Effect>
                </Image>

                <TextBlock
                            Width="225"
                            Height="36"
                    Margin="0,0,0,30"
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource SFUIDisplay}"
                            FontSize="30"
                            FontStyle="Normal"
                            Foreground="White"
                            Text="Iniciar Sesión"
                            TextAlignment="Center" />

                <!--TEXTBOX and CARD for User-->
                <Grid
                    Margin="0,0,0,20">
                    <customcontrols:cdvEnterUser/>

                </Grid>

                <!--TEXTBOX and CARD for Password-->
                <Grid>
                    <customcontrols:BindablePasswordBox      
                        Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Loaded="BindablePasswordBox_Loaded" />
                </Grid>

                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="SF UI Text"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="White" 
                    Width="310" 
                    Text="{Binding ErrorMessage}" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" />

                <!--Button -Siguiente- for Login-->
                <Border
                    Margin="0,0,0,5">
                    <Border.Effect>
                        <DropShadowEffect Direction="255" Color="#FFB6C2CB" ShadowDepth="1" BlurRadius="10" />
                    </Border.Effect>
                    <Button
                    x:Name="btnLogin1"
                    BorderThickness="0"
                    Command="{Binding LoginCommand}"
                    Content="Siguiente"
                    Cursor="Hand"
                    FontFamily="{StaticResource SFUIDisplay}"
                    FontSize="24" 
                    Foreground="Gray" Width="156">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="White" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF9EA79F"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                        Width="150"
                                        Height="40"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
                <StackPanel
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                    <TextBlock
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="Forgot Password?" />

                    <TextBlock
                                Margin="8,0,0,0"
                                Cursor="Hand"
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="Reset" />

