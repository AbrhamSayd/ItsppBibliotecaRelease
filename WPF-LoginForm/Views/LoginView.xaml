                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkGoldenrod"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image
                    Source="/Images/img_Three_Dots-removebg-preview.png">
                    </Image>
                </Button>
            </Border>
            <TextBlock
            Margin="1094,16,0,0"
            TextWrapping="Wrap" FontSize="20" FontFamily="{DynamicResource SFUIUltraLight}" Foreground="#FF00785C" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="UltraLight"><Run Text="Puerto Peñasco"/><Run Language="es-mx" Text=", Sonora."/></TextBlock>
            <TextBlock
                Margin="0,21,275,0"
