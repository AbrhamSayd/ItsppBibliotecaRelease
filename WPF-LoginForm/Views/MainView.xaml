<Window
    x:Class="WPFBiblioteca.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:WPFBiblioteca.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:WPFBiblioteca.ViewModels"
    Title="MainWindowView"
    Width="1700"
    Height="900"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border BorderBrush="Transparent" CornerRadius="50">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint=".5,.5">
                <GradientStop Offset="0.64" Color="{StaticResource secondaryBackColor1}" />
                <GradientStop Offset="0.14" Color="{StaticResource secondaryBackColor2}" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--  Navigation Menu  -->
                <ColumnDefinition Width="64" />

                <!--  Content Menu  -->
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <!--  Navigation Menu  -->
            <Border Grid.Column="0" CornerRadius="50,0,0,50">
                <StackPanel>
                    <!--  Logo  -->
                    <StackPanel>
                        <fa:IconImage
                            Width="40"
                            Height="40"
                            Margin="0,42,0,137"
                            Foreground="{StaticResource primaryBackColor1}"
                            Icon="UserAlt" />
                    </StackPanel>

                    <!--  Menu Buttons  -->
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BookOpen" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                        <!--  Menu Buttons  -->
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Portrait" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="HomeAlt" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BookOpenReader" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BookBookmark" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>
            <!--  Main Section  -->
            <Border
                Grid.Column="1"
                Background="{StaticResource primaryBackColor1}"
                CornerRadius="50,0,0,50" />

        </Grid>







    </Border>




</Window>
