<Window x:Class="WPFBiblioteca.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBiblioteca.Views"
        xmlns:viewModel="clr-namespace:WPFBiblioteca.ViewModels"
        xmlns:customcontrols="clr-namespace:WPFBiblioteca.CustomControls"
        mc:Ignorable="d"
        Title="MainWindowView" Height="900" Width="1700"
        ShowInTaskbar="False" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderBrush="Transparent">
    
    
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border
        CornerRadius="50"
        BorderBrush="Transparent">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint=".5,.5">
                <GradientStop Color="#7FD7AC" Offset="0.64" />
                <GradientStop Color="#3AA499" Offset="0.14"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid x:Name="gridPrincipal">
            <DockPanel
                Height="auto"
                Width="160"
                HorizontalAlignment="Left">
                <StackPanel
                    Orientation="Vertical"
                    Width="160">
                    <customcontrols:btnUserPrefab
                        Margin="50,30,30,30"/>
                </StackPanel>
            </DockPanel>
            <DockPanel
                Height="auto"
                Width="auto"
                HorizontalAlignment="Right">
                <Border
                    BorderThickness="1"
                    BorderBrush="White"
                    CornerRadius="50">

                    <Border
                    x:Name="gridFather"
                    Height="900"
                    Width="1540"
                    Background="White"
                    DockPanel.Dock="Right"
                    CornerRadius="50">

                        <!--Blur effect future use-->

                        <!--<Border.Effect>
                        <BlurEffect Radius="50" KernelType="Gaussian"/>
                    </Border.Effect>-->

                        <TextBlock Text="{Binding CurrentUserAccount.DisplayName}"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    </Border>
                </Border>
            </DockPanel>
        </Grid>
    </Border>




</Window>
