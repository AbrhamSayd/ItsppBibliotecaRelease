<Window x:Class="WPFBiblioteca.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBiblioteca.Views"
        xmlns:viewModel="clr-namespace:WPFBiblioteca.ViewModels"
        xmlns:customcontrols="clr-namespace:WPFBiblioteca.CustomControls"
        mc:Ignorable="d"
        Title="MainWindowView" Height="900" Width="1700"
        ShowInTaskbar="False" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderBrush="Transparent">
    
    
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border
        CornerRadius="50"
        BorderBrush="Transparent"
        Background="{StaticResource primaryGradientColor}">

        <Grid x:Name="gridPrincipal">
            <DockPanel x:Name="dockSideMenu"
                Height="auto"
                Width="auto"
                HorizontalAlignment="Left">
                <Border
                    x:Name="borderMenuSelectedIndicator"
                    Width="10"
                    Height="60"
                    Background="#016283">
                </Border>
                <StackPanel
                    Margin="-10,0,0,0"
                    Orientation="Vertical"
                    Width="160">
                    <!--btnUser-->
                        <!--<customcontrols:btnUserPrefab
                        Margin="50,30,30,30"/>-->
                    <Border CornerRadius="20"
                            Margin="30,30,30,80"
                Background="Transparent">
                        <Button           
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                            <Image Source="/Images/SideMenuImages/imgUser.png" />
                        </Button>
                    </Border>
                    
                    <!--btnInventarioLibros-->
                    <Border CornerRadius="20"
                            Margin="30,0,30,30"
                Background="Transparent">

                        <Button Style="{StaticResource menuButton}">
                            <Image Source="/Images/SideMenuImages/imgInventarioLibros.png" />
                        </Button>

                                <!--<Button            
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                            <Image Source="/Images/SideMenuImages/imgInventarioLibros.png" />
                        </Button>-->
                    </Border>

                    <!--btnPrestatarios-->
                    <Border CornerRadius="20"
                           Margin="30,0,30,30"
                Background="Transparent">
                        <Button           
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                            <Image Source="/Images/SideMenuImages/imgPrestatarios.png" />
                        </Button>
                    </Border>

                    <!--btnHome-->
                    <Border CornerRadius="20"
                            Margin="30,0,30,30"
                Background="Transparent">
                        <Button           
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                            <Image Source="/Images/SideMenuImages/imgHome.png" />
                        </Button>
                    </Border>

                    <!--btnPrestamosPendientes-->
                    <Border CornerRadius="20"
                            Margin="30,0,30,30"
                Background="Transparent">
                        <Button           
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                            <Image Source="/Images/SideMenuImages/imgPrestamosPendientes.png" />
                        </Button>
                    </Border>

                    <!--btnGenerarInformes-->
                    <Border CornerRadius="20"
                            Margin="30,0,30,30"
                Background="Transparent">
                        <Button           
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                            <Image Source="/Images/SideMenuImages/imgGenerarInformes.png" />
                        </Button>
                    </Border>


                </StackPanel>
            </DockPanel>
            <DockPanel
                Height="auto"
                Width="auto"
                HorizontalAlignment="Right">
                <Border
                    BorderThickness="1"
                    BorderBrush="White"
                    CornerRadius="50">

                    <Border
                    x:Name="borderContent"
                    Height="900"
                    Width="1540"
                    Background="White"
                    DockPanel.Dock="Right"
                    CornerRadius="50">
                        <Grid>
                            <!--Blur effect future use-->

                            <!--<Border.Effect>
                        <BlurEffect Radius="50" KernelType="Gaussian"/>
                    </Border.Effect>-->

                            <customcontrols:searchBar_btnSearch
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="50,50"/>

                            <TextBlock Text="{Binding CurrentUserAccount.DisplayName}"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                            
                        </Grid>
                    </Border>
                </Border>
            </DockPanel>
        </Grid>
    </Border>




</Window>
