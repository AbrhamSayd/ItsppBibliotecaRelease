<Window
    x:Class="WPFBiblioteca.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:WPFBiblioteca.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:viewModel="clr-namespace:WPFBiblioteca.ViewModels"
    Title="MainWindowView"
    Width="1700"
    Height="900"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    ShowInTaskbar="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>




    <Border
        CornerRadius="50"
        BorderBrush="Transparent"
        Background="{StaticResource primaryGradientColor}">

        <Grid x:Name="gridPrincipal">
            <DockPanel x:Name="dockSideMenu"
                Height="auto"
                Width="auto"
                HorizontalAlignment="Left">
                <Border
                    x:Name="borderMenuSelectedIndicator"
                    Width="10"
                    Height="60"
                    Background="#016283">
                </Border>
                <StackPanel
                    Margin="-10,0,0,0"
                    Orientation="Vertical"
                    Width="160">
                    <!--btnUser-->
                        <!--<customcontrols:btnUserPrefab
                        Margin="50,30,30,30"/>-->
                    <Border CornerRadius="20"
                            Margin="30,30,30,80"
                Background="Transparent">
                        <Button           
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                            <Image Source="/Images/SideMenuImages/imgUser.png" />
                        </Button>
                    </Border>
                    
                    <!--btnInventarioLibros-->
                    <Border CornerRadius="20"
                            Margin="30,0,30,30"
                Background="Transparent">

                        <Button Style="{StaticResource menuButton}">
                            <Image Source="/Images/SideMenuImages/imgInventarioLibros.png" />
                        </Button>

                                <!--<Button            
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                            <Image Source="/Images/SideMenuImages/imgInventarioLibros.png" />
                        </Button>-->
                    </Border>

                <Grid>

                    <Grid.RowDefinitions>
                        <!--  Control Bar  -->
                        <RowDefinition Height="35" />
                        <!--  Header / Caption  -->
                        <RowDefinition Height="35" />
                        <!--  Content section / Child views  -->
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                    <!--  control bar  -->
                    <StackPanel
                        x:Name="pnlcontrolBar"
                        Grid.Row="0"
                        Margin="0,0,15,0"
                        Background="Transparent"
                        FlowDirection="RightToLeft"
                        MouseEnter="pnlcontrolBar_MouseEnter"
                        MouseLeftButtonDown="pnlcontrolBar_MouseLeftButtonDown"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btnClose"
                            Click="btnClose_Click"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color10}">
                            <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleXmark"
                                Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <Button
                            x:Name="btnMaximize"
                            Click="btnMaximize_Click"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color9}">
                            <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleUp"
                                Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <Button
                            x:Name="btnMinimize"
                            Click="btnMinimize_Click"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color9}">
                            <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleDown"
                                Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <TextBlock
                            Margin="30,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            FontFamily="{DynamicResource SFUIDisplay}"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="#FF00785C"
                            TextWrapping="Wrap"><Run Language="es-mx" Text="10/22/2022" /></TextBlock>
                        <TextBlock
                            Margin="30,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            FontFamily="{DynamicResource SFUIUltraLight}"
                            FontSize="20"
                            FontWeight="UltraLight"
                            Foreground="{StaticResource titleColor2}"
                            TextWrapping="Wrap"><Run Text="Puerto Peñasco" /><Run Language="es-mx" Text=", Sonora." /></TextBlock>
                        
                        <!--  Testing TestBlocks for positions  -->
                        <!--<TextBlock x:Name="positionTop" Text="0" FontSize="30" Margin="10,0,10,0"/>
                        <TextBlock x:Name="positionLeft" Text="0" FontSize="30"/>-->
                    </StackPanel>

                    <!--  Header / Caption  -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <!--  Caption  -->
                        <StackPanel
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                            <fa:IconImage
                                Height="30"
                                Margin="35,0,10,0"
                                Foreground="{StaticResource hoverActionbuttons}"
                                Icon="Home" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource SFUIDisplay}"
                                FontWeight="Medium"
                                Foreground="{StaticResource titleColor1}"
                                Text="Dashboard"
                                FontSize="20"/>
                        </StackPanel>


                    </Grid>
                </Grid>
            </Border>

        </Grid>







    </Border>




</Window>
