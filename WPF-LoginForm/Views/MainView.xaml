<Window
    x:Class="WPFBiblioteca.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:fieldsModels="clr-namespace:WPFBiblioteca.ViewModels.Fields"
    xmlns:viewModels="clr-namespace:WPFBiblioteca.ViewModels"
    xmlns:fieldsViews="clr-namespace:WPFBiblioteca.Views.FieldsViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:tablesViews="clr-namespace:WPFBiblioteca.Views.TablesViews"
    Title="MainWindowView"
    d:DesignWidth="1700"
    d:DesignHeight="900"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    ShowInTaskbar="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <ContentControl.Resources>
        
        <!--<DataTemplate DataType="{x:Type viewModels:MembersViewModel}">
            <tablesViews:BooksView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type fieldsModels:MembersFieldsViewModel}">
            <fieldsViews:BooksFieldsView />
        </DataTemplate>-->


        <DataTemplate DataType="{x:Type viewModels:BooksViewModel}">
            <tablesViews:BooksView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type fieldsModels:BooksFieldsViewModel}">
            <fieldsViews:BooksFieldsView />
        </DataTemplate>


        <DataTemplate DataType="{x:Type viewModels:UsersViewModel}">
            <tablesViews:UsersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type fieldsModels:UserFieldsViewModel}">
            <fieldsViews:UsersFieldsView />
        </DataTemplate>
    </ContentControl.Resources>

    <Border
        x:Name="BorderMain"
        Background="{StaticResource primaryGradientColor}"
        BorderBrush="Transparent"
        CornerRadius="50">

        <Grid>
            <Grid.ColumnDefinitions>
                <!--  Navigation Menu  -->
                <ColumnDefinition Width="Auto" />

                <!--  Content Menu  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Navigation Menu  -->
                <ScrollViewer Grid.Row="0"
                              Margin="0,20,10,0"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Disabled"
                              CanContentScroll="True">
                    <StackPanel>
                        <!--  CurrentUserSesion  -->
                        <RadioButton
                        BorderThickness="0"
                        Style="{StaticResource menuButtonStyleV2}"
                        Tag="{StaticResource primarySolidColor}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                Width="65"
                                Height="65"
                                Icon="UserAlt"
                                Style="{StaticResource menuButtonIcon}" />
                            </StackPanel>
                        </RadioButton>

                        <!--  Menu Buttons  -->
                        <RadioButton Style="{StaticResource menuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="BookOpen" Style="{StaticResource menuButtonIcon}" />
                            </StackPanel>
                            <!--  Menu Buttons  -->
                        </RadioButton>
                        <RadioButton 
                            Command="{Binding}" 
                            Style="{StaticResource menuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Portrait" Style="{StaticResource menuButtonIcon}" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton
                        Command="{Binding}"
                        Style="{StaticResource menuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="HomeAlt" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton
                        Command="{Binding NavigateUsers}"
                        Style="{StaticResource menuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BookOpenReader" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton
                        Command="{Binding NavigateBooks}"
                        Style="{StaticResource menuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="BookBookmark" Style="{StaticResource menuButtonIcon}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </ScrollViewer>
                        

                <RadioButton
                    Grid.Row="1"
                    Margin="0,0,0,0"
                    Style="{StaticResource menuButtonStyleV2}"
                    Tag="{StaticResource primarySolidColor}">
                    <fa:IconImage Icon="ArrowRightFromBracket" Style="{StaticResource menuButtonIcon}" />
                </RadioButton>
            </Grid>

            <!--  Main Section  -->
            <Border
                x:Name="BorderContent"
                Grid.Column="1"
                Background="{StaticResource primarySolidColor}"
                CornerRadius="50,50,50,50">

                <Grid>

                    <Grid.RowDefinitions>
                        <!--  Control Bar  -->
                        <RowDefinition Height="35" />
                        <!--  Content section / Child views  -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  control bar  -->

                    <Grid Grid.Row="0"
                          Margin="0,0,25,0"
                          Background="Transparent"
                          x:Name="pnlcontrolBar"
                          MouseEnter="pnlcontrolBar_MouseEnter"
                          MouseLeftButtonDown="pnlcontrolBar_MouseLeftButtonDown">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="1"
                        Grid.Row="0"
                        Orientation="Horizontal">

                            <TextBlock
                            Margin="0,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            FontFamily="{DynamicResource SFUIUltraLight}"
                            FontSize="20"
                            FontWeight="UltraLight"
                            Foreground="{StaticResource LocationTitleColor}"
                            TextWrapping="Wrap"><Run Text="Puerto Peñasco" /><Run Language="es-mx" Text=", Sonora" /></TextBlock>

                            <TextBlock
                            Margin="15,0,50,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            FontFamily="{DynamicResource SFUIDisplay}"
                            FontSize="22"
                            Foreground="{StaticResource DateTextUIColor}"
                            TextWrapping="Wrap"><Run Language="es-mx" Text="10/22/2022" /></TextBlock>

                            <Button
                            x:Name="btnMinimize"
                            Click="btnMinimize_Click"
                            Tag="primaryGradientColor"
                            Style="{StaticResource controlButton}">
                                <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleDown"
                                Style="{StaticResource controlButtonIcon}" />
                            </Button>

                            <Button
                            x:Name="btnMaximize"
                            Click="btnMaximize_Click"
                            Tag="primaryGradientColor"
                            Style="{StaticResource controlButton}">
                                <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleUp"
                                Style="{StaticResource controlButtonIcon}" />
                            </Button>

                            <Button
                            x:Name="btnClose"
                            Click="btnClose_Click"
                            Tag="CloseOrDeleteColor"
                            Style="{StaticResource controlButton}">
                                <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleXmark"
                                Style="{StaticResource controlButtonIcon}" />
                            </Button>


                            <!--  Testing TestBlocks for positions  -->
                            <!--<TextBlock x:Name="positionTop" Text="0" FontSize="30" Margin="10,0,10,0"/>
                        <TextBlock x:Name="positionLeft" Text="0" FontSize="30"/>-->
                        </StackPanel>
                    </Grid>

                    

                    <!--  Content control  -->
                    <Grid Grid.Row="1" Margin="20,0,20,20">
                        <ContentControl Content="{Binding CurrentViewModel}" />
                    </Grid>

                </Grid>
            </Border>

        </Grid>

    </Border>

</Window>