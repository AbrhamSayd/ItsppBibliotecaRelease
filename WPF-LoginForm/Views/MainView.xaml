<Window
    x:Class="WPFBiblioteca.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:WPFBiblioteca.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:viewModel="clr-namespace:WPFBiblioteca.ViewModels"
    Title="MainWindowView"
    MinWidth="1700"
    MinHeight="900"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    ShowInTaskbar="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border
        x:Name="BorderMain"
        Background="{StaticResource primaryGradientColor}"
        BorderBrush="Transparent"
        CornerRadius="50">


        <Grid>
            <Grid.ColumnDefinitions>
                <!--  Navigation Menu  -->
                <ColumnDefinition Width="64" />

                <!--  Content Menu  -->
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <!--  Navigation Menu  -->
            <Border Grid.Column="0" CornerRadius="50,50,50,50">
                <StackPanel>
                    <!--  Logo  -->
                    <StackPanel>
                        <fa:IconImage
                            Width="40"
                            Height="40"
                            Margin="0,42,0,137"
                            Foreground="{StaticResource primaryBackColor1}"
                            Icon="UserAlt" />
                    </StackPanel>

                    <!--  Menu Buttons  -->
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BookOpen" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                        <!--  Menu Buttons  -->
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Portrait" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="HomeAlt" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BookOpenReader" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource primaryBackColor1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BookBookmark" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>
            <!--  Main Section  -->
            <Border
                x:Name="BorderContent"
                Grid.Column="1"
                Background="{StaticResource primaryBackColor1}"
                CornerRadius="50,50,50,50">

                <Grid>

                    <Grid.RowDefinitions>
                        <!--  Control Bar  -->
                        <RowDefinition Height="35" />
                        <!--  Content section / Child views  -->
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                    <!--  control bar  -->
                    <StackPanel
                        x:Name="pnlcontrolBar"
                        Grid.Row="0"
                        Margin="0,0,15,0"
                        Background="Transparent"
                        FlowDirection="RightToLeft"
                        MouseEnter="pnlcontrolBar_MouseEnter"
                        MouseLeftButtonDown="pnlcontrolBar_MouseLeftButtonDown"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btnClose"
                            Click="btnClose_Click"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color10}">
                            <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleXmark"
                                Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <Button
                            x:Name="btnMaximize"
                            Click="btnMaximize_Click"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color9}">
                            <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleUp"
                                Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <Button
                            x:Name="btnMinimize"
                            Click="btnMinimize_Click"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color9}">
                            <fa:IconImage
                                Width="25"
                                Height="25"
                                Icon="CircleDown"
                                Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <TextBlock
                            Margin="30,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            FontFamily="{DynamicResource SFUIDisplay}"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="#FF00785C"
                            TextWrapping="Wrap"><Run Language="es-mx" Text="10/22/2022" /></TextBlock>
                        <TextBlock
                            Margin="30,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            FontFamily="{DynamicResource SFUIUltraLight}"
                            FontSize="20"
                            FontWeight="UltraLight"
                            Foreground="{StaticResource titleColor2}"
                            TextWrapping="Wrap"><Run Text="Puerto Peñasco" /><Run Language="es-mx" Text=", Sonora." /></TextBlock>

                        <!--  Testing TestBlocks for positions  -->
                        <!--<TextBlock x:Name="positionTop" Text="0" FontSize="30" Margin="10,0,10,0"/>
                        <TextBlock x:Name="positionLeft" Text="0" FontSize="30"/>-->
                    </StackPanel>

                    <Grid 
                        Grid.Row="1"
                        Margin="20,0,20,20">
                        <ContentControl
                            Background="DeepPink">
                            <Border Background="DeepPink"/>

                        </ContentControl>
                    </Grid>

                </Grid>
            </Border>

        </Grid>

    </Border>

</Window>